{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6"
  }
}
